@{
    ViewData["Title"] = "ListOfFile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var files = ViewData["File"] as IEnumerable<string>;
}
<head lang="en">

    <style>
        .pagination li {
            background-color: transparent;
            /*padding:10px;*/
        }
    </style>
</head>

@inject DB_Music db;
<div class="content-wrapper" style="min-height: 724px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- /.row -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">جدول فایل ها</h3>

                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input id='myInput' type="text" name="table_search" class="form-control float-right" onkeyup='searchTable()' placeholder="جستجو">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover" id='myTable'>
                                <tbody>
                                    <tr>
                                        <th></th>
                                        <th>نام موسیقی</th>
                                        <th>فایل موسیقی</th>
                                        <th>وضعیت</th>
                                    </tr>
                                    @foreach (var item in files)
                                    {
                                        string[] Split = item.Split('\\');
                                        <tr>
                                            <td>
                                                @{
                                                    if (db.Music.Any(z => z.MusicPath320 == Split[9])==false)
                                                    {
                                                        <i href="#" onclick="SwalOpener(this)" NameOfMusic="@Split[9]" class="fa fa-trash" style="color:red" aria-hidden="true"></i>
                                                    }
                                                }
                                            </td>
                                            <td>@Split[9]</td>
                                            <td>
                                                <audio controls>
                                                    <source src="~/uploads/@Split[9]" type="audio/mp4">
                                                    <source src="~/uploads/@Split[9]" type="audio/mp3">
                                                    Your browser does not support the audio element.
                                                </audio>
                                            </td>
                                            <td>

                                                @{
                                                    if (db.Music.Any(z => z.MusicPath320 == Split[9]))
                                                    {
                                                        <span class="badge badge-success">
                                                            فایل مفید
                                                        </span>

                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-danger">
                                                            فایل بی مصرف
                                                        </span>
                                                    }
                                                }
                                            </td>
                                        </tr>
                                    }


                                </tbody>

                            </table>
                        </div>

                        <!-- /.card-body -->
                    </div>
                    @Html.PagedListPager((IPagedList)files, Page => Url.Action("ListOfFile", "Music", new { Page = Page }),
                    new X.PagedList.Web.Common.PagedListRenderOptions
                    {
                        ContainerDivClasses = new[] { "pagination" },
                        //LiElementClasses = new[] { "active", "pl-3" },
                        LiElementClasses = new[] { "page-item" },
                        PageClasses = new[] { "page-link" },
                    })
                    <!-- /.card -->
                </div>
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@*//Search*@
<script>
    function searchTable() {
        var input, filter, found, table, tr, td, i, j;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td");
            for (j = 0; j < td.length; j++) {
                if (td[j].innerHTML.toUpperCase().indexOf(filter) > -1) {
                    found = true;
                }
            }
            if (found) {
                tr[i].style.display = "";
                found = false;
            } else {
                tr[i].style.display = "none";
            }
        }
    }
</script>
<script>

    function SwalOpener(e)
    {
       let nameMusic =e.getAttribute("NameOfMusic");
        //alert($(e).attr("NameOfMusic"))
        Swal.fire({
            title: 'آیا میخواهید این فایل را حذف کنید ؟',
            icon: 'info',
            showDenyButton: true,
            confirmButtonText: 'بله',
            denyButtonText: `خیر`,
        }).then((result) => {
            /* Read more about isConfirmed, isDenied below */
            if (result.isConfirmed) {
                $.post("@Url.Action("DeleteFile","Music")", { Name: nameMusic }, reesponse => {
                    if (reesponse.status == true) {
                        window.location.reload(true);
                        Swal.fire({
                            icon: 'success',
                            title: 'فایل با موفقیت حذف شد ',
                        })
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'مشکلی به وجود آمد بعدا تلاش کنید ',
                        })
                    }
                })


            } else if (result.isDenied) {
            }
        })
    }
</script>