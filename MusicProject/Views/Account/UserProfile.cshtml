        document.getElementById('ErrorMsg').innerHTML = ""

            const OptionHeader = {
                method: 'POST',
                headers: { 'content-type': 'application/json' },
                body: JSON.stringify({ Email: Email.value, Name: FirstName.value, Last: lastname.value, OldPassword: OldPass.value, NewPassword: NewPass.value })
