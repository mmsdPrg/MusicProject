    const lastname = document.getElementById('lastname')
    const OldPass = document.getElementById('oldpass')
    const NewPass = document.getElementById('newpass')
    const ConfirmNewPass = document.getElementById('confirmpass')

    function ChangePassword() {
        if (NewPass.value != ConfirmNewPass.value || NewPass.value.length < 8 || OldPass == "") {
            document.getElementById('ErrorMsg').innerHTML = "تایید رمز جدید میبایست با رمز جدید یکسان باشد<br>رمز باید بیشتر از 8 رقم باشد<br>رمز قدیمی وارد نشده است"
